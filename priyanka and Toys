#include <stdio.h>
#include <stdlib.h>


int compare(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int n;
    scanf("%d", &n);

    int *w = (int*)malloc(n * sizeof(int));

    for (int i = 0; i < n; i++) {
        scanf("%d", &w[i]);
    }

    
    qsort(w, n, sizeof(int), compare);

    int containers = 1;
    int minWeight = w[0];

    
    for (int i = 1; i < n; i++) {
        if (w[i] > minWeight + 4) {
            containers++;
            minWeight = w[i];
        }
    }

    printf("%d", containers);

    free(w);
    return 0;
}
