#include <stdio.h>

int pickingNumbers(int a[], int n) {
    int freq[101] = {0};  // Since 0 <= a[i] <= 100
    int maxLen = 0;

    // Count frequency of each number
    for (int i = 0; i < n; i++) {
        freq[a[i]]++;
    }

    // Compare counts of adjacent numbers
    for (int i = 0; i < 100; i++) {
        int len = freq[i] + freq[i + 1];
        if (len > maxLen)
            maxLen = len;
    }

    return maxLen;
}

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int result = pickingNumbers(a, n);
    printf("%d\n", result);

    return 0;
}
